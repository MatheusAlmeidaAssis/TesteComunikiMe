@using TesteComunikiMe.Utilities.Consts
@model TesteComunikiMe.Application.Dtos.VendaDto

@{
    ViewData["Title"] = "Consultar Venda";
}

<h1>Consultar Venda</h1>

<div>
    <h4>Venda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
            @Html.DisplayFor(model => model.Cliente.Sobrenome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorTotal)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Descrição
                </th>
                <th>
                    Quantidade
                </th>
                <th>
                    Valor Total
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.VendaDetalhes)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto.Descricao)
                    </td>
                    <th>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.ValorTotal)
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    @Html.ActionLink("Editar", "Editar", new { id = Model.Id }) |
    <a asp-action="Index">Voltar</a>
</div>